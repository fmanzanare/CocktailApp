<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.estech.cocktailapp.fragments.ListaCoctelesAlcohol"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_listaCoctelesSpinner"
            app:destination="@id/listaCoctelesSpinner" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.estech.cocktailapp.fragments.ListaCoctelesNoAlcohol"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/lista_receta"/>
    <fragment
        android:id="@+id/listaCoctelesSpinner"
        android:name="com.estech.cocktailapp.fragments.ListaCoctelesSpinner"
        android:label="fragment_lista_cocteles_spinner"
        tools:layout="@layout/fragment_lista_cocteles_spinner" />
</navigation>